{
  "scopeName": "source.br",
  "name": "Business Rules",
  "fileTypes":
  [
    "br",
    "brs",
    "wb",
    "wbs"
  ],
  "folds":[
    {
      "type": "if_statement",
      "start": {
        "type": "\"then\""
      },
      "end": {
        "type": "\"end if\""
      }
    }
  ],
  "patterns":
  [
    {
      "match": "\\\"[^\"]*\\\"",
      "name": "string.quoted.double.br"
    },
    {
      "match": "(!.*)$",
      "name": "comment.line.br"
    },
    {
      "match": "(^\\d{5}\\s*rem.*)$",
      "name": "comment.line.br"
    },
    {
      "match": "(^\\s*rem.*)$",
      "name": "comment.line.br"
    },
    {
      "match": "\\b(?i:if|then|else|end if|for|next|do|while|loop|until)\\b",
      "name": "keyword.control.br"
    },
    {
      "match": "(:=|\\+=|\\-=|\\*=|\\/=)",
      "name": "keyword.operator.assignment.br"
    },
    {
      "match": "\\b(?i:And|Not|Or)\\b",
      "name": "keyword.operator.logical.br"
    },
    {
      "match": "(\\~)",
      "name": "keyword.operator.logical.br"
    },
    {
      "match": "(<|>|<>|<=|>=|~=|==|=)",
      "name": "keyword.operator.comparison.br"
    },
    {
      "match": "(\\+|\\-|\\*|\\/|\\&)",
      "name": "keyword.operator.mathematical.br"
    },
    {
      "match": "(\\b(?i:include|define|select|end select|case)\\b)",
      "name": "constant.language.br"
    },
    {
      "match": "^\\d{5}\\b",
      "name": "constant.linenumber.br"
    },
    {
      "match": "\\b\\d+(\\.\\d+)?\\b",
      "name": "constant.numeric.br"
    },
    {
      "match": "(\\b(?i:fn)\\w[\\w\\d]*\\$)",
      "name": "entity.name.function.br"
    },
    {
      "match": "(\\b(?i:fn)\\w[\\w\\d]*\\b)",
      "name": "entity.name.function.br"
    },
    {
      "match": "(\\b(?i:BR_FileName\\$|BRErr\\$|CForm\\$|Chr\\$|Cnvrt\\$|Date\\$|Decrypt\\$|Encrypt\\$|Env\\$|File\\$|Help\\$|Hex\\$|KStat\\$|Login_Name\\$|LPad\\$|LTrm\\$|Lwrc\\$|Max\\$|Min\\$|Msg\\$|OS_FileName\\$|Pic\\$|Program\\$|RPad\\$|Rpt\\$|RTrm\\$|Session\\$|SRep\\$|Str\\$|Time\\$|Trim\\$|UnHex\\$|UprC\\$|UserID\\$|Variable\\$|WBPlatform\\$|WBVersion\\$|WSID\\$|Xlate\\$))",
      "name": "entity.name.function.br"
    },
    {
      "match": "(\\b(?i:Abs|AIdx|Atn|Bell|Ceil|CmdKey|Cnt|Code|CoS|CurCol|CurFld|CurRow|CurTab|CurWindow|Date|Days|Debug_Str|DIdx|Err|Exists|Exp|File|FileNum|FKey|FP|FreeSp|Inf|Int|IP|KLn|KPs|KRec|Len|Line|Lines|LineSPP|Log|LRec|Mat2Str|Max|Min|Mod|Msg|MsgBox|NewPage|Next|NxtCol|Nxtfld|NxtRow|Ord|Pi|Pos|Printer_List|ProcIn|Rec|Rem|RLn|Rnd|Round|Serial|SetEnv|Sgn|Sin|Sleep|Sqr|Srch|Str2Mat|Sum|Tab|Tan|Timer|UDim|Val|Version)\\b)",
      "name": "entity.name.function.br"
    },
    {
      "match": "\\b(?i:ALTERNATE|ATTR|BASE|BORDER|CHAIN|CLOSE|COLLATE|CONTINUE|CONV|DATA|DEF|DELETE|DIM|DISPLAY|DROP|DUPREC|END|EOF|EOL|ERROR|EVENT|EXECUTE|EXIT|EXP|EXTERNAL|FIELDS|FILENUM|FILES|FNEND|FORM|FREE|GOSUB|GOTO|HELP|IGNORE|INPUT|INTERNAL|INVP|IOERR|KEY|KEYED|LET|LIBRARY|LINPUT|LOCKED|MAT|NATIVE|NOKEY|NONE|NOREC|OFLOW|ON|OPEN|OPTION|OUTIN|OUTPUT|PAGEOFLOW|PAUSE|PRINT|PROC|RANDOMIZE|READ|RELATIVE|RELEASE|REREAD|RESERVE|RESTORE|RESUME|RETAIN|RETRY|RETURN|REWRITE|RINPUT|SEARCH|SELECT|SEQUENTIAL|SHIFT|SOFLOW|STATUS|STEP|STOP|SYSTEM|TO|TRACE|USE|USING|WRITE|ZDIV)\\b",
      "name": "keyword.other.br"
    }
  ]
}
