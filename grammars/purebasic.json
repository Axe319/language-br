{
  "scopeName": "source.purebasic",
  "name": "PureBasic",
  "fileTypes":
  [
    "pb",
    "pbi"
  ],
  "patterns":
  [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#storage-modifiers"
    },
    {
      "match": "(Procedure|ProcedureDLL)\\s+(\\w+)\\(",
      "name": "meta.function.purebasic",
      "captures":
      {
        "1":
        {
          "name": "keyword.other.purebasic"
        },
        "2":
        {
          "name": "entity.name.function.purebasic"
        }
      }
    },
    {
      "match": "(Procedure|ProcedureDLL)\\.(\\w+)\\s+(\\w+)\\(",
      "name": "meta.function.purebasic",
      "captures":
      {
        "1":
        {
          "name": "keyword.other.purebasic"
        },
        "2":
        {
          "name": "storage.type.purebasic"
        },
        "3":
        {
          "name": "entity.name.function.purebasic"
        }
      }
    },
    {
      "name": "string.quoted.double.purebasic",
      "begin": "\"",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.begin.purebasic"
        }
      },
      "end": "\"",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.purebasic"
        }
      }
    }
  ],
  "repository":
  {
    "comments":
    {
      "patterns":
      [
        {
          "match": "^[^;]*(;.*)$",
          "captures":
          {
            "1":
            {
              "name": "punctuation.definition.comment.purebasic"
            }
          }
        }
      ]
    },
    "keywords":
    {
      "patterns":
      [
        {
          "match": "\\b(Else|End|EndIf|ForEach|ForEver|If|Next|Repeat|Until)\\b",
          "name": "keyword.control.purebasic"
        },
        {
          "match": "\\b(And|Not|Or)\\b",
          "name": "keyword.operator.purebasic"
        },
        {
          "match": "\\b(EndEnumeration|EnableExplicit|EndProcedure|EndStructure|Enumeration|Global|IncludeFile|ProcedureReturn|Protected|Structure|XIncludeFile)\\b",
          "name": "keyword.other.purebasic"
        }
      ]
    },
    "constants":
    {
      "patterns":
      [
        {
          "match": "#([\\w_]+)\\b",
          "name": "constant.language.purebasic"
        },
        {
          "match": "\\b\\d+(\\.\\d+)?\\b",
          "name": "constant.numeric.purebasic"
        }
      ]
    },
    "storage-modifiers":
    {
      "patterns":
      [
        {
          "match": "\\b(Global|Protected|Shared|Static)\\b",
          "name": "storage.modifier.purebasic"
        }
      ]
    }
  }
}
