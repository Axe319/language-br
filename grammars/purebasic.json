{
  "scopeName": "source.purebasic",
  "name": "PureBasic",
  "fileTypes":
  [
    "pb",
    "pbi"
  ],
  "patterns":
  [
    {
      "match": "\\\"[^\"]*\\\"",
      "name": "string.quoted.double.purebasic"
    },
    {
      "match": "(;.*)$",
      "name": "comment.line.purebasic"
    },
    {
      "match": "\\b(Break|ContinueElse|End|EndIf|Else|ForEach|ForEver|If|Next|Repeat|Until|Wend|While)\\b",
      "name": "keyword.control.purebasic"
    },
    {
      "match": "\\b(And|Not|Or|XOr)\\b",
      "name": "keyword.operator.logical.purebasic"
    },
    {
      "match": "(<|>|<>|<=|>=)",
      "name": "keyword.operator.comparison.purebasic"
    },
    {
      "match": "=",
      "name": "keyword.operator.assignment.purebasic"
    },
    {
      "match": "\\b(Debug|EnableExplicit|Enumeration|EndEnumeration|Procedure|ProcedureDLL|ProcedureReturn|EndProcedure|Macro|EndMacro|DataSection|EndDataSection|Structure|EndStructure|IncludeFile|XIncludeFile)\\b",
      "name": "keyword.other.purebasic"
    },
    {
      "match": "\\b(Global|Protected|Static)\\b",
      "name": "storage.modifier.purebasic"
    },
    {
      "match": "#([\\w_]+)\\b",
      "name": "constant.language.purebasic"
    },
    {
      "match": "\\b\\d+(\\.\\d+)?\\b",
      "name": "constant.numeric.purebasic"
    },
    {
      "match": "(\\b\\w[\\w\\d]*|[^\\w]@[\\w\\d]*)\\(",
      "captures":
      {
        "1":
        {
          "name": "entity.name.function.purebasic"
        }
      }
    }
  ]
}
