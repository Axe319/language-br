{
  "scopeName": "source.purebasic",
  "name": "PureBasic",
  "fileTypes":
  [
    "pb",
    "pbi"
  ],
  "patterns":
  [
    {
      "include": "#strings"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#structures",
      "disabled": 1
    },
    {
      "include": "#keywords"
    }
  ],
  "repository":
  {
    "structures":
    {
      "begin": "(Structure)\\s+(\\w[\\w\\d]*)",
      "beginCaptures":
      {
        "1":
        {
          "name": "keyword.other.purebasic"
        },
        "2":
        {
          "name": "storage.type.purebasic"
        }
      },
      "end": "EndStructure",
      "endCaptures":
      {
        "0":
        {
          "name": "keyword.other.purebasic"
        }
      },
      "name": "meta.structure.purebasic"
    },
    "comments":
    {
      "patterns":
      [
        {
          "match": "(;.*)$",
          "name": "comment.line.purebasic"
        }
      ]
    },
    "strings":
    {
      "patterns":
      [
        {
          "match": "\\\"[^\"]*\\\"",
          "name": "string.quoted.double.purebasic"
        }
      ]
    },
    "keywords":
    {
      "patterns":
      [
        {
          "match": "\\b(If|Else|EndIf|Procedure|ProcedureDLL|ProcedureReturn|EndProcedure|Macro|EndMacro|DataSection|EndDataSection|Repeat|While|Wend|Until|ForEver|ForEach|Next|Break|Continue|Structure|EndStructure)\\b",
          "name": "keyword.other.purebasic"
        }
      ]
    }
  }
}
