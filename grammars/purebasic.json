{
  "scopeName": "source.purebasic",
  "name": "PureBasic",
  "fileTypes":
  [
    "pb",
    "pbi"
  ],
  "patterns":
  [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "name": "string.quoted.double.purebasic",
      "begin": "\"",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.begin.purebasic"
        }
      },
      "end": "\"",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.purebasic"
        }
      }
    }
  ],
  "repository":
  {
    "comments":
    {
      "patterns":
      [
        {
          "match": "^[^;]*(;.*)$",
          "captures":
          {
            "1":
            {
              "name": "punctuation.definition.comment.purebasic"
            }
          }
        }
      ]
    },
    "keywords":
    {
      "patterns":
      [
        {
          "match": "\\b(EndEnumeration|EnableExplicit|EndProcedure|EndStructure|Enumeration|ForEver|Global|Procedure|Protected|Repeat|Structure|Until)\\b",
          "name": "keyword",
          "comment": "Generic and stand-alone keywords."
        }
      ]
    }
  }
}
